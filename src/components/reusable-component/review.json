{
  "collectionName": "components_reusable_component_reviews",
  "info": {
    "displayName": "Review",
    "description": ""
  },
  "options": {},
  "attributes": {
    "Name": {
      "type": "string",
      "required": true
    },
    "Designation": {
      "type": "string",
      "required": true
    },
    "Stars": {
      "type": "integer",
      "required": true,
      "max": 5
    },
    "Image": {
      "type": "component",
      "repeatable": false,
      "component": "shared.shared-image"
    },
    "Review": {
      "type": "customField",
      "options": {
        "output": "HTML",
        "preset": "light"
      },
      "required": true,
      "customField": "plugin::ckeditor.CKEditor"
    },
    "StarColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "required": true,
      "customField": "plugin::color-picker.color"
    }
  }
}
